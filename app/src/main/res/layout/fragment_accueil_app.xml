<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/background_yellow_black"
    android:scaleType="fitXY"
    android:focusableInTouchMode="true"
    android:id="@+id/accueilApp"
    tools:context=".Étudiant.AccueilÉtudiant.accueilApp">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="640dp"
        android:layout_margin="25dp"
        android:layout_marginTop="55dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image View -->
            <ImageView
                android:id="@+id/cardImageView"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logoappblanc" />

            <TextView
                android:id="@+id/introApp"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:ellipsize="end"
                android:lineSpacingExtra="8dp"
                android:maxLines="4"
                android:padding="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/introApp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:gravity="center"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAjouterEtudiant"
                    style="@style/loginButton"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonbb"
                    android:text="Créer Compte étudiant">

                </androidx.appcompat.widget.AppCompatButton>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <!--                <androidx.appcompat.widget.AppCompatButton-->
                <!--                    android:id="@+id/btnAjouterEntreprise"-->
                <!--                    style="@style/loginButton"-->
                <!--                    android:layout_width="219dp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:background="@drawable/buttonbb"-->
                <!--                    android:text="Créer Compte Entreprise">-->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSeConnecter"
                    style="@style/loginButton"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonbb"
                    android:text="Se Connecter ">

                </androidx.appcompat.widget.AppCompatButton>



                <!--                <TextView-->
                <!--                    android:id="@+id/CompteExistDeja"-->
                <!--                    style="@style/parent"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="22dp"-->
                <!--                    android:minHeight="48dp"-->
                <!--                    android:onClick="onLoginClick"-->
                <!--                    android:text="Se Connecter"-->
                <!--                    android:textAlignment="center"-->
                <!--                    android:textColor="@color/darkTextColor"-->
                <!--                    android:textSize="17sp"-->
                <!--                    android:textStyle="bold" />-->
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        </FrameLayout>