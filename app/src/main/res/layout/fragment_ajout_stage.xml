<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Hybride"/>-->
<!--    </RadioGroup>-->
        <EditText
            android:id="@+id/taches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="top|start"
            android:hint="Tâche à faire"
            android:inputType="textMultiLine"
            android:lines="4" />

        <EditText
            android:id="@+id/competences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="top|start"
            android:hint="Compétence "
            android:inputType="textMultiLine"
            android:lines="4" />

        <EditText
            android:id="@+id/modeStage"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="mode: (En personne ou à distance)" />


        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPublier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publier"
        android:background="@color/Red"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>

</LinearLayout>
