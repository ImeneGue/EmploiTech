<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    tools:ignore="MissingConstraints">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@color/yellow"
        android:padding="5dp"
        app:cardCornerRadius="20dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="100dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logoEntreprise2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/default_logo" />
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/supprimerStage_btn"
            android:layout_width="54dp"
            android:layout_height="68dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/nomEntreprise2"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:drawableRight="@drawable/enregistrericon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/titreStage2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.105"
            tools:srcCompat="@drawable/enregistrericon" />

        <TextView
            android:id="@+id/titreStage2"
            android:layout_width="315dp"
            android:layout_height="69dp"
            android:layout_below="@+id/nomEntreprise2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="92dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609"
            app:text="Stage" />

        <TextView
            android:id="@+id/nomEntreprise2"
            android:layout_width="195dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="44dp"
            android:text="@string/nom_de_l_entreprise"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.546"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/modeStage2"
            android:layout_width="140dp"
            android:layout_height="40dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="44dp"
            android:layout_toEndOf="@+id/address2"
            android:ems="10"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:inputType="text"
            app:text="mode de stage" />

        <TextView
            android:id="@+id/address2"
            android:layout_width="149dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:text="addresse"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomEntreprise2"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>